{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "moduleDirectories": ["node_modules", "src"],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  }
}
