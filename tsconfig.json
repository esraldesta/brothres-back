{
  "compilerOptions": {
    "alwaysStrict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2022"],
    "module": "CommonJS", // Jest requires CommonJS for module resolution
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "es2022",
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "outDir": "./dist",
    "baseUrl": "./"
    // "paths": {
    //   "@app/*": ["api/src/*"], // Add paths for moduleNameMapper alignment
    //   "@modules/*": ["src/modules/*"]
    // }
  },
  "exclude": ["node_modules", "dist"], // Ensure Jest skips compiled output
  "include": ["**/*.ts", "**/*.js"] // Allow JS if needed (e.g., Jest mocks)
}
